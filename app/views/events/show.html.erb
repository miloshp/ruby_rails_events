
<% if @event.user == current_user%>
  <h2  class="title_big", align="center"><%= @event.title %> </h2>
  <br>
  <div class="well col-xs-8 col-xs-offset-2">
    <ul class="listing">
      <div class="row" align="center">
        <div class="col-md-4 col-md-offset-4">
           <li class="event-title"><%= link_to @event.user.username, user_path(@event.user) %></li>
           <li ><small><%= pluralize(@event.user.events.count, "event") if @event.user.events %></small></li>
        </div>
      </div>
    </ul>
    <h4 class="event-title", class="center"><strong>Description </strong></h4>
    <hr>
    <small><%= @event.description %></small>
    <br>
    <br>
    <br>
    <% if @event.address.empty? %>
      <br>
    <% else  %>
      <h4 class="event-title", class="center"><strong>Address </strong></h4>
      <hr>
      <small><%= @event.address %></small>
      <br>
      <br>
      <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@event.latitude},#{@event.longitude}&markers=#{@event.latitude},#{@event.longitude}&zoom=7&size=640x400&key=AIzaSyDzNOqgYpV9I36_fqab5AbbXpuetGxG2Cs&signature=v_9WH11S4jAzFavUwGNwbIdLfbY=",
                    class: 'img-fluid img-rounded', alt: "#{@event.title} on the map"%>
      <br>
      <iframe width="300" height="300" frameborder="0" style="border:0"
              src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDzNOqgYpV9I36_fqab5AbbXpuetGxG2Cs&q=1301 Lowerline st, New Orleans LA "
              allowfullscreen>
      </iframe>
      <br>
    <% end %>
    <% if @event.when_date.nil? %>
      <br>
    <% else %>
      <h4 class="event-title", class="center"><strong>Event Date </strong></h4>
      <hr>
      <small><%= @event.when_date %></small>
      <br>
      <br>
    <% end %>
    <%= link_to "Edit", edit_event_path(@event), class: "btn btn-primary btn-lg outline" %>
    <%= link_to "Delete", event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?"}, class: "btn btn-primary btn-lg outline" %>
  </div>
<% end %>

