<h1 align="center">All Users</h1>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <% if logged_in? %>
            <li class="event-title"><%= user.username %></li>
            <li><small><%= pluralize(user.events.count, "event") if user.events %></small></li>
          <% else %>
            <li class="event-title"><%= user.username %></li>
            <li><small><%= pluralize(user.events.count, "event") if user.events %></small></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>